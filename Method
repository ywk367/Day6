import java.util.Scanner;

  class Main {

    public static int sumMethod(int n){
      int i, sumVal=0;
      for(i=1;i<=n;++i){
        sumVal += i;
      }

      return sumVal;
    }
    public static void main(String[] args) {
      
      Scanner scan = new Scanner(System.in);
      int n;

      n = scan.nextInt();

      System.out.println(String.valueOf(sumMethod(n)));

      
    }
  }
